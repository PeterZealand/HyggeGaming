                <label asp-for="@Model.Employee.EmployeeId" class="control-label">Id</label>
                <input asp-for="@Model.Employee.EmployeeId" class="form-control" />
                <span asp-validation-for="@Model.Employee.EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Employee.Password" class="control-label">Password</label>
                <input asp-for="@Model.Employee.Password" class="form-control" />
                <span asp-validation-for="@Model.Employee.Password" class="text-danger"></span>
            </div>

            

            <div class="form-group button-container align-content-center">
                <input type="submit" value="Add employee" class="btn MyColor btn-outline-light large-btn mt-2" />
            </div>
