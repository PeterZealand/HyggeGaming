@page
@model HyggeGaming.Pages.Employees.AddEmployeeModel
@{
    ViewData["Title"] = "AddEmployee";
}
<h1>AddEmployee</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
           
            <div class="form-group">
                <label asp-for="@Model.Emp.FirstName" class="control-label"></label>
                <input asp-for="@Model.Emp.FirstName" class="form-control" />
                <span asp-validation-for="Emp.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Emp.LastName" class="control-label">LastName</label>
                <input asp-for="@Model.Emp.LastName" class="form-control" />
                <span asp-validation-for="Emp.LastName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="@Model.Emp.Address" class="control-label">Address</label>
                <input asp-for="@Model.Emp.Address" class="form-control" />
                <span asp-validation-for="Emp.Address" class="text-danger"></span>
            </div>           
            <div class="form-group"> @*Zipcode/city dropdown*@
                <label asp-for="@Model.Emp.ZipCode" class="control-label">ZipCode</label>
                <select asp-for="@Model.Emp.ZipCode" class="form-control">
                    <option value="">Choose zipcode</option>
                    @foreach (var zip in Model.Cities)
                    {
                        <option value="@zip.ZipCode">@zip.ZipCode @zip.City1</option>
                    }                    
                </select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Emp.Mail" class="control-label">Mail</label>
                <input asp-for="@Model.Emp.Mail" class="form-control" />
                <span asp-validation-for="Emp.Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Emp.EmployeeId" class="control-label">Id</label>
                <input asp-for="@Model.Emp.EmployeeId" class="form-control" />
                <span asp-validation-for="Emp.EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Emp.Password" class="control-label">Password</label>
                <input asp-for="@Model.Emp.Password" class="form-control" />
                <span asp-validation-for="Emp.Password" class="text-danger"></span>
            </div>
            
            <div class="form-group"> @*Add role dropdown*@
                <label asp-for="@Model.Emp.Role.RoleId" class="control-label">Role</label>
                <select asp-for="@Model.Emp.Role.RoleId" class="form-control">
                    <option value="">Choose role</option>
                    @foreach (var role in Model.Roles)
                    {
                        <option value="@role.Role1">@role.Role1</option>
                    }
                </select>
            </div>
            @*Add team dropdown*@
            <div class="form-group visually-hidden">
                <label asp-for="@Model.Emp.DevTeamId" class="control-label">Team Id</label>
                <input asp-for="@Model.Emp.DevTeamId" class="form-control" />
                <span asp-validation-for="Emp.DevTeam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>

</div>
