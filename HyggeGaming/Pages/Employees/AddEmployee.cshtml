@model HyggeGaming.Pages.Employees.AddEmployeeModel
@{
    ViewData["Title"] = "AddEmployee";
}
<h1>AddEmployee</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Emp.FirstName" class="control-label"></label>
                <input asp-for="@Model.Emp.FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Emp.LastName" class="control-label">LastName</label>
                <input asp-for="@Model.Emp.LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Emp.Address" class="control-label">Address</label>
                <input asp-for="@Model.Emp.Address" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Emp.ZipCodeNavigation" class="control-label">ZipCode</label>
                <input asp-for="@Model.Emp.ZipCodeNavigation" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Emp.Mail" class="control-label">Mail</label>
                <input asp-for="@Model.Emp.Mail" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Emp.EmployeeId" class="control-label">Id</label>
                <input asp-for="@Model.Emp.EmployeeId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Emp.Password" class="control-label">Password</label>
                <input asp-for="@Model.Emp.Password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Emp.RoleId" class="control-label">Role</label>
                <input asp-for="@Model.Emp.RoleId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Emp.DevTeamId" class="control-label">Team Id</label>
                <input asp-for="@Model.Emp.DevTeamId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>

</div>


