            <div class="form-group">
                <label asp-for="@Model.Employee.LastName" class="control-label">LastName</label>
                <input asp-for="@Model.Employee.LastName" class="form-control" />
                <span asp-validation-for="@Model.Employee.LastName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="@Model.Employee.Address" class="control-label">Address</label>
                <input asp-for="@Model.Employee.Address" class="form-control" />
                <span asp-validation-for="@Model.Employee.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Employee.ZipCode" class="control-label">ZipCode</label>
