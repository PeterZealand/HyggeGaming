@page
@model HyggeGaming.Pages.Employees.UpdateEmployeeModel
@{
    ViewData["Title"] = "Update Employee";
}

<div class="My-container">
<h1 class="ms-5">Update employee</h1>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Emp.EmployeeId" />
            <div class="form-group">
                <label asp-for="@Model.Emp.FirstName" class="control-label"></label>
                <input asp-for="@Model.Emp.FirstName" class="form-control" />
                <span asp-validation-for="@Model.Emp.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Emp.LastName" class="control-label"></label>
                <input asp-for="@Model.Emp.LastName" class="form-control" />
                <span asp-validation-for="@Model.Emp.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Emp.Address" class="control-label"></label>
                <input asp-for="@Model.Emp.Address" class="form-control" />
                <span asp-validation-for="@Model.Emp.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Emp.ZipCode" class="control-label"></label>
                <select asp-for="@Model.Emp.ZipCode" class="form-control">
                    <option value="">Choose zipcode</option>
                    @foreach (var zip in Model.Cities)
                    {
                        <option value="@zip.ZipCode">@zip.ZipCode @zip.City1</option>
                    }
                </select>
                <span asp-validation-for="@Model.Emp.ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Emp.Mail" class="control-label"></label>
                <input asp-for="@Model.Emp.Mail" class="form-control" />
                <span asp-validation-for="@Model.Emp.Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Emp.Password" class="control-label"></label>
                <input asp-for="@Model.Emp.Password" class="form-control" />
                <span asp-validation-for="@Model.Emp.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Emp.RoleId" class="control-label"></label>
                <select asp-for="@Model.Emp.RoleId" class="form-control">
                    <option value="">Choose role</option>
                    @foreach (var role in Model.Roles)
                    {
                        <option value="@role.RoleId">@role.Role1</option>
                    }
                </select>
                <span asp-validation-for="@Model.Emp.RoleId" class="text-danger"></span>
            </div>
            <div class="form-group visually-hidden">
                <label asp-for="@Model.Emp.DevTeamId" class="control-label"></label>
                <input asp-for="@Model.Emp.DevTeamId" class="form-control" />
                <span asp-validation-for="@Model.Emp.DevTeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Save" class="btn myBtn mt-3">Save</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="ms-5 btn backBtn" asp-page="/Employees/AllEmployees">Back to All Employees</a>
</div>

</div>