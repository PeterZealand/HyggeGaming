@page 
@model HyggeGaming.Pages.Employees.DeleteEmployeeModel
@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-5">
    <h1 class="text-danger mb-4">Delete Employee</h1>

    <h4 class="text-muted">Are you sure you want to delete this employee?</h4>
    <hr />

    <form method="post">
        <input type="hidden" asp-for="Emp" />

        <!-- Display Employee Details for Confirmation -->
        <div class="mb-3">
            <label class="form-label fw-bold">Employee ID:</label>
            <span>@Model.Emp</span>
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">First Name:</label>
            <span>@Model.Emp?.FirstName</span>
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">Last Name:</label>
            <span>@Model.Emp?.LastName</span>
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">Email:</label>
            <span>@Model.Emp?.Mail</span>
        </div>

        <!-- Confirm Delete Buttons -->
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-page="/Employees/AllEmployees" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>