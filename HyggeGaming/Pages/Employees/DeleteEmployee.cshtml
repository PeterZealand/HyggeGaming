@page 
@model HyggeGaming.Pages.Employees.DeleteEmployeeModel
@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container My-container mt-5">
    <h1 class="mb-4">Delete Employee</h1>
    
    <div class="row">
    <div class="col-5 justify-content-center">
    <p>Are you sure you want to delete this employee?</p>
    
    <form method="post">
        <input type="hidden" asp-for="Emp" />
        
        <!-- Display Employee Details for Confirmation -->
        <div class="mb-3">
            <label class="form-label fw-bold">Employee ID:</label>
            <span class="fake-input">@Model.Emp.EmployeeId</span>
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">First Name:</label>
            <span class="fake-input">@Model.Emp?.FirstName</span>
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">Last Name:</label>
            <span class="fake-input">@Model.Emp?.LastName</span>
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">Email:</label>
            <span class="fake-input">@Model.Emp?.Mail</span>
        </div>

        <!-- Confirm Delete Buttons -->
        <div class="d-flex gap-2">
            <button type="submit" class="btn myBtn">Yes, Delete</button>
        </div>

            </form>
        </div>
    </div>

    <div>
        <a asp-page="/Employees/AllEmployees" class="btn backBtn mt-3">Cancel</a>
    </div>

</div>