@page
@model HyggeGaming.Pages.Employees.LoginModel
@{
}

<div class="row flex-column align-content-center">
    <div class="col-md-5 containerLogin">
        <h2>Login</h2>

        <p>Welcome back!<br />Enter your credentials to access your account and continue where you left off.</p>

        @if (Model.ErrorMsg.Length > 0)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>@Model.ErrorMsg</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post" asp-page-handler="Login">

            <div class="login-input">
                <div class="form-group">
                    <label asp-for="@Model.Employee.Mail" class="control-label">Email</label>
                    <input asp-for="@Model.Employee.Mail" class="form-control" />
                    <span asp-validation-for="@Model.Employee.Mail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Employee.Password" class="control-label">Password</label>
                    <input asp-for="@Model.Employee.Password" class="form-control" type="password" />
                    <span asp-validation-for="@Model.Employee.Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group button-container align-content-center">
                <input type="submit" value="Login" class="btn btn-outline-light large-btn mt-2" />
            </div>

        </form>
    </div>
</div>
