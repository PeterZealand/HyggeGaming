@page
@model HyggeGaming.Pages.Games.CreateGameModel
@{
}

<h1>Create new game</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.game.GameName" class="control-label"></label>
                <input asp-for="@Model.game.GameName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.game.GameType" class="control-label"></label>
                <input asp-for="@Model.game.GameType" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.game.DevelopmentStage" class="control-label"></label>
                <select asp-for="@Model.game.DevelopmentStage" class="form-control">
                    <option value="" class="select-option">-- Select Development Stage --</option>
                    @foreach (string stage in Model.devStages)
                    {
                        <option value="@stage" class="select-option">@stage</option>
                    }
                </select>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
