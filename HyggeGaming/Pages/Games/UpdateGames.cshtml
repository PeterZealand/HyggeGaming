@page
@model HyggeGaming.Pages.Games.UpdateGamesModel
@{
    ViewData["Title"] = "Update Games";
}
<div class="My-container">
<h1>Update</h1>
    <p>You are currently updating game: (@Model.GameObject.GameId) @Model.GameObject.GameName</p>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.GameObject.GameId" />
            <div class="form-group">
                <label asp-for="@Model.GameObject.GameName" class="control-label"></label>
                <input asp-for="@Model.GameObject.GameName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.GameObject.GameType" class="control-label"></label>
                <input asp-for="@Model.GameObject.GameType" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.GameObject.DevelopmentStage" class="control-label"></label>
                <select asp-for="@Model.GameObject.DevelopmentStage" class="form-control">
                    <option value="" class="select-option">-- Select Development Stage --</option>
                    @foreach (string stage in Model.DevStages)
                    {
                        <option value="@stage" class="select-option">@stage</option>
                    }
                </select>
            </div>
            <div class="form-group mt-4">
                <button type="submit" value="Update" class="btn myBtn">Save changes</button>
            </div>
        </form>          
    </div>

    <div>
         <a class="btn backBtn" asp-page="/Games/ManageGames">Back to game manager</a>
    </div>
        
</div>
</div>

