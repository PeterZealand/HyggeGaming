@page
@model HyggeGaming.Pages.Assignments.AllAssignmentsModel

@{
    ViewData["Title"] = "Manage Assignments";
}

<h1>Manage Assignments</h1>

<div class="row mb-3">
    <div class="col d-flex">
        <a class="btn backBtn me-3" asp-page="/Employees/Profile">Back to Profile</a>
        <a class="btn myBtn" asp-page="CreateAssignment">Create New Assignment</a>
    </div>
    <div class="col-3 ms-auto text-end">
        <form method="get" class="d-flex">
                <input type="text" name="SearchString" class="form-control myInput mySearch me-1" placeholder="Search Assignments" value="@Model.SearchString" />
                <button type="submit" class="btn myBtn">Search</button>
        </form>
    </div>
</div>

<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Assignment.FirstOrDefault().AssignmentName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Assignment.FirstOrDefault().Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Assignment.FirstOrDefault().Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Assignment.FirstOrDefault().Game)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Assignment)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AssignmentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Game.GameId)
                    </td>
                    <td>
                        <a class="btn myBtn" asp-page="/Assignments/EditAssignment" asp-route-id="@item.AssignmentId">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z" />
                            </svg>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
