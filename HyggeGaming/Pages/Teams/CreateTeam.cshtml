@page
@model HyggeGaming.Pages.Teams.CreateTeamModel

@{
    ViewData["Title"] = "CreateTeam";
}
<div class="My-container">
<h1>CreateTeam</h1>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DevTeam.DevTname" class="control-label"></label>
                <input asp-for="DevTeam.DevTname" class="form-control" />
                <span asp-validation-for="DevTeam.DevTname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.GameId">Choose Game</label>
                <select asp-for="Game.GameId" class="form-control">
                    @foreach (var game in Model.Games)
                    {
                        <option value="@game.GameId">@game.GameName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-primary">Create new team</button>
            </div>
        </form>
    </div>
</div>

    <div>
        <a class="btn backBtn" asp-page="/Teams/ManageDevTeams">Back to team manager</a>
    </div>
</div>
