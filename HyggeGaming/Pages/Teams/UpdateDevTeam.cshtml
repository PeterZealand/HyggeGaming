@page
@model HyggeGaming.Pages.Teams.UpdateDevTeamModel
@{
    ViewData["Title"] = "Update Team";
}

<div class="My-container">
<h1>Update Team</h1>

<div class="row justify-content-center">
    <div class="col-md-4">
        <div>
            <p>Change name for team (id: @Model.DevT.DevTeamId, current name: @Model.DevT.DevTname)</p>
        </div>
        <form method="post">
            <input type="hidden" asp-for="DevT"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
            <div class="form-group">
                <label asp-for="DevT.DevTeamId" class="control-label"></label>
                <input asp-for="@Model.DevT.DevTeamId" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.DevT.DevTname" class="control-label"></label>
                <input asp-for="@Model.DevT.DevTname" class="form-control" />
            </div>
           

            <div class="form-group">
                <button type="submit" value="Save" class="btn myBtn">Save changes</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn backBtn" asp-page="/Teams/ManageDevTeams">Back to List</a>
</div>
</div>