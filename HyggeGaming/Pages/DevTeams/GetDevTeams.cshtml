<table class="table">
    <thead>
        <tr>
            <th>Team Id</th>
            <th>Team Name</th>
            <th>Assigned Game</th>
            <th>Members</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.DevTeam != null)
        {
            @foreach (var team in Model.DevTeam)
            {
                <tr>
                    <td>@team.DevTeamId</td>
                    <td>@team.DevTname</td>
                    <td>AssignedGameTitle</td>
                    <td>
                        <ul class="list-unstyled">
                            @foreach (var member in team.Employees)
                            {
                                <li>
                                    <strong>@member.FirstName @member.LastName</strong>
                                    | Role: @member.RoleId | Email: <a href="mailto:@member.Mail">@member.Mail</a>)
                                </li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
